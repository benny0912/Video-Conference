@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
        <a href="#" class="navbar-brand"><img src="~/imgs/telemeet_logo.png" width="200" height="60" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav">
                @if (HttpContextAccessor.HttpContext.Session.GetString("userRole") == null || HttpContextAccessor.HttpContext.Session.GetString("userRole").Equals(""))
                {
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Register")" class="nav-link text-dark" id="register" >Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Login")" class="nav-link text-dark" id="login" >Login</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" id="login">Hello @HttpContextAccessor.HttpContext.Session.GetString("firstName")</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Logout", "Login")" class="nav-link text-dark" id="logout" >Logout</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>